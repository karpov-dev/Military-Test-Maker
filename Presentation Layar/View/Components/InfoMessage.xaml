<UserControl x:Class="Presentation_Layar.View.Components.InfoMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation_Layar.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal" Visibility="{Binding Visibility}">
        <TextBlock Text="{Binding Text}" Style="{StaticResource InfoText}" VerticalAlignment="Center" Margin="5"/>
    </StackPanel>
    
</UserControl>
