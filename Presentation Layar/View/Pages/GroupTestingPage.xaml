<UserControl x:Class="Presentation_Layar.View.Pages.GroupTestingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cmp="clr-namespace:Presentation_Layar.View.Components"
             xmlns:local="clr-namespace:Presentation_Layar.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Групповое тестирование"
                   Style="{StaticResource BigText_Center}"
                   Grid.Column="1"
                   VerticalAlignment="Top"/>
        <Grid Grid.Column="1"
              Grid.Row="1"
              Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">

                <TextBlock Text="{Binding TimerTime}"
                           Style="{StaticResource LittleText}"
                           DockPanel.Dock="Right"/>
                <TextBlock Text="До перехода: "
                           Style="{StaticResource LittleText}"
                           DockPanel.Dock="Right"/>
                <TextBlock Text="Вопрос: "
                           Style="{StaticResource LittleText}"
                           DockPanel.Dock="Left"/>
                <TextBlock DataContext="{Binding Statistic}"
                           Text="{Binding CurrentQuestion}"
                           Style="{StaticResource LittleText}"
                           DockPanel.Dock="Left"/>
                <TextBlock Text=" из "
                           Style="{StaticResource LittleText}"
                           DockPanel.Dock="Left"/>
                <TextBlock DataContext="{Binding Statistic}"
                           Text="{Binding AmountQuestions}"
                           Style="{StaticResource LittleText}"
                           DockPanel.Dock="Left"/>
            </DockPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" MaxHeight="100">
                <DockPanel>
                    <TextBlock Text="Вопрос: "
                               Style="{StaticResource NormalText}"
                               DockPanel.Dock="Left"/>
                    <TextBlock Text="{Binding Question}"
                               Style="{StaticResource NormalText}"
                               DockPanel.Dock="Left"/>
                </DockPanel>
            </ScrollViewer>
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <DockPanel Visibility="{Binding OneVisibility}">
                        <TextBlock Text="1) "
                                   Style="{StaticResource NormalText}"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Answers[0]}"
                                   Style="{StaticResource NormalText}"/>
                    </DockPanel>
                    <DockPanel Visibility="{Binding TwoVisibility}">
                        <TextBlock Text="2) "
                                   Style="{StaticResource NormalText}"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Answers[1]}"
                                   Style="{StaticResource NormalText}"/>
                    </DockPanel>

                    <DockPanel Visibility="{Binding ThreeVisibility}">
                        <TextBlock Text="3) "
                                   Style="{StaticResource NormalText}"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Answers[2]}"
                                   Style="{StaticResource NormalText}"/>
                    </DockPanel>

                    <DockPanel Visibility="{Binding FourVisibility}">
                        <TextBlock Text="4) "
                                   Style="{StaticResource NormalText}"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Answers[3]}"
                                   Style="{StaticResource NormalText}"/>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="3">
                <cmp:ErrorMessage/>
                <cmp:InfoMessage/>
            </StackPanel>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Закончить тестирование"
                        Style="{StaticResource Button}"
                        Command="{Binding CancelCommand}"/>
                <Button Content="Правильный ответ"
                        Style="{StaticResource Button}"
                        Command="{Binding ShowRightAnswer}"
                        Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
